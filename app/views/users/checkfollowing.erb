<div class="container">
  <% if @user.followed.blank? %>
    <b>This user is not following anyone yet!</b>
  <% else %>
    <p><%= @user.user_name %> is following:</p>
      <% @user.followed.each do |user| %>
        <p><a href="/users/<%= user.id %>"> @<%= user.user_name %></a></p>
        <br>
      <% end %>
   <% end %>
</div>
