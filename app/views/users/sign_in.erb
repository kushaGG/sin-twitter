<section class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-4 has-text-centered">
				<h2 class="title is-2">Log in</h2>
				    <form action="/sign_in" method="POST">

				  <div class="field">
				  	<div class="control">
				          <input type="text" name="user_name" class="input is-primary has-text-centered" placeholder="User name"><br>
				    </div>
				  </div>

				  <div class="field">
				  	<div class="control">
				    <input type="password" name="password" class="input is-primary has-text-centered" placeholder="Password"><br>
						</div>
					</div>

          <input type="submit" value="Login" id="submit" class="button is-info is-medium">
          <br>
          <br>
          <h3>Not A User?</h3>
          <a href="/sign_up">Create New User</a>
				<br/>
				</form>
			</div>
		</div>
	</div>
</section>
