<div class="container">
  <% if params[:search].blank? %>
    <h4>Suggested Users:</h4>
  <% else %>
    <h4>You searched for <%= params[:search] %>:</h4>
  <% end %>

  <% if @users.present? %>
    <% @users.each do |user| %>
     <p><a href="/users/<%= user.id %>"> @<%= user.user_name %></a></p>
    <% end %>
  <% end %>
</div>
